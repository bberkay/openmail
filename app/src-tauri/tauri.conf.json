{
    "productName": "Openmail",
    "version": "0.0.1",
    "identifier": "com.openmail.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../build"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "title": "Openmail",
                "width": 1200,
                "height": 700,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "headerImage": "icons/header450x171@installer-img.png",
                "sidebarImage": "icons/sidebar443x848@installer-img.png",
                "installerIcon": "icons/installer256x256@installer-icon.ico",
                "uninstallerIcon": "icons/uninstaller256x256@installer-icon.ico"
            }
        }
    },
    "plugins": {
        "fs": {
            "requireLiteralLeadingDot": false
        }
    }
}
