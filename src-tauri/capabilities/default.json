{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$HOME/.openmail/client/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/.openmail/client/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$HOME/.openmail/client/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/.openmail/client/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-truncate",
      "allow": [
        {
          "path": "$HOME/.openmail/client/**"
        }
      ]
    },
    "notification:default",
    "process:default"
  ]
}
